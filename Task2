# Basic chatbot with predefined responses
def chatbot():
    print("Chatbot: Hello! I am a simple chatbot. How can I help you?")
    
    # Define some basic responses
    responses = {
        "hello": "Hello! codealpha",
        "hi": "Hi there! What can I do for you?",
        "how are you": "I'm just a program, but I'm requestd for intership traning",
        "what is your name": "my name is ankit kumar gupta.",
        "bye": "bye! Have a grate day in programming time!",
        "help": "the providing bay setificat "
    }

    while True:
        # Get user input and convert it to lowercase for comparison
        user_input = input("You: ").lower()

        # Check if user wants to exit
        if user_input == "bye":
            print("Chatbot: " + responses["bye"])
            break
        else:
            # Provide a response based on the input
            response = responses.get(user_input, "I'm sorry, I don't understand that.")
            print("Chatbot: " + response)

# Run the chatbot
chatbot()
